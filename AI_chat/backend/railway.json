{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "8000",
        "CORS_ORIGINS": "{{ CORS_ORIGINS }}",
        "FORCE_HTTPS": "true"
      }
    }
  }
}
