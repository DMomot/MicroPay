{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "3000",
        "REACT_APP_API_URL": "{{ REACT_APP_API_URL }}",
        "FORCE_HTTPS": "true",
        "DANGEROUSLY_DISABLE_HOST_CHECK": "true"
      }
    }
  }
}
